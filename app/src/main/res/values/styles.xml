<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">20dp</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <style name="ToggleButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">20dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="android:backgroundTint">@color/toggle_button</item>
        <item name="android:textColor">@color/color_black_light</item>
        <item name="strokeColor">@color/toggle_button</item>
        <item name="android:padding">16dp</item>
    </style>
</resources>
